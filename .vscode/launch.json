{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // NOTE: If you get an error from Yeoman, run `npm link` to set up generator to run locally first.
        //       (eg., 'You don't seem to have a generator with the name “template-name” installed.')
        {
            "type": "node",
            "request": "launch",
            "name": "Yeoman generator",
            // Non-global install location
            // "program": "${workspaceFolder}/node_modules/yo/cli.js",
            // Global Yeoman install location default on macOS
            "program": "/usr/local/lib/node_modules/yo/lib/cli.js",
            "args": [
                "learn-knowledge-check"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "windows": {
                // Global Yeoman install location override on Windows
                "program": "C:/Users/patri/AppData/Roaming/npm/node_modules/yo/lib/cli.js"
            }
        },
    ]
}